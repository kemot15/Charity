@model ForgotPasswordViewModel
@{ 
    Layout = "_AccountLayout";
}


<section class="login-page">
    <h2>Zresetuj hasło</h2>
    <form asp-action="ForgotPassword" asp-controller="Account">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" type="email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group form-group--buttons">
            <a asp-action="Registration" asp-controller="Account" class="btn btn--without-border">Załóż konto</a>
            <button class="btn" type="submit">Zresetuj hasło</button>
        </div>
    </form>
</section>

