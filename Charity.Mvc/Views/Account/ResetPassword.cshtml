@model NewPasswordViewModel
@{ Layout = "_AccountLayout"; }


<section class="login-page">
    <h2>Resetowanie hasła</h2>
    <form asp-controller="Account" asp-action="ResetPassword">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <div class="form-group">
            <input asp-for="Password" type="password" placeholder="Hasło"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="RepeatPassword" type="password" placeholder="Powtórz hasło"/>
            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
        </div>
        <div class="form-group form-group--buttons">
            <button class="btn" type="submit">Zresetuj hasło</button>
        </div>
    </form>
</section>

