@model LoginViewModel
@{ Layout = "_AccountLayout"; }


    <section class="login-page">
        <h2>Zaloguj się</h2>
        <form asp-action="Login" asp-controller="Account">
            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Hasło" />
                <a href="#" class="btn btn--small btn--without-border reset-password">Przypomnij hasło</a>
            </div>

            <div class="form-group form-group--buttons">
                <a asp-action="Registration" asp-controller="Account" class="btn btn--without-border">Załóż konto</a>
                <button class="btn" type="submit">Zaloguj się</button>
            </div>
        </form>
    </section>

