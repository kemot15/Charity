@model Charity.Mvc.Models.Db.Institution
@{ 
    Layout = "_AppLayout";
}

    <h1 class="h3 mb-4 text-gray-800">Instytucje</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Dodaj/Edytuj instytucję</h6>
        </div>
        <div class="card-body">
            <p>Podaj dane instytucji</p>
            <!-- Circle Buttons (Default) -->
            <form asp-action="AddEdit" asp-controller="Institution">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Nazwa instytucji">
                    <small id="emailHelp" class="form-text text-muted">Np. Fundacja "Bez domu"</small>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Password</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Opis instytucji">
                    <small id="emailHelp" class="form-text text-muted">Np. Cel i misja: Pomoc dla osób nie posiadających miejsca zamieszkania</small>
                </div>
                @*<button type="submit" class="btn btn-primary">Zapisz</button>*@
                <button type="submit" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Zapisz</span>
                </button>
            </form>            
        </div>
    </div>